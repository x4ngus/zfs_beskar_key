[Unit]
Description=Beskar key mount (v{{VERSION}})
DefaultDependencies=no
After=systemd-udev-settle.service
Before=zfs-load-key.service initrd-root-fs.target
Wants=systemd-udev-settle.service
ConditionPathExists=/dev/disk/by-label/{{TOKEN_LABEL}}

[Mount]
What=/dev/disk/by-label/{{TOKEN_LABEL}}
Where={{MOUNTPOINT}}
Type=ext4
Options=ro,nosuid,nodev,noexec,x-systemd.device-timeout=5s
DirectoryMode=0755

[Install]
WantedBy=initrd-root-fs.target
